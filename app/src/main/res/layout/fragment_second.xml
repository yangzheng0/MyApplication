<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额："
        android:textSize="21sp"
        android:textColor="#353535"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp" />

    <EditText
        android:id="@+id/editView1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="请输入金额"
        android:textAlignment="center"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/name_label"
        app:layout_constraintBottom_toBottomOf="@id/name_label"
        app:layout_constraintLeft_toRightOf="@id/name_label"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        android:textSize="21sp"
        android:textColor="#353535"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="请输入时间(年)"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/time_label"
        app:layout_constraintBottom_toBottomOf="@id/time_label"
        app:layout_constraintLeft_toRightOf="@id/time_label"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/rate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="利率："
        android:textSize="21sp"
        android:textColor="#353535"
        android:layout_marginTop="300dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="请输入收益率"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/rate_label"
        app:layout_constraintBottom_toBottomOf="@id/rate_label"
        app:layout_constraintLeft_toRightOf="@id/rate_label"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/income_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收益："
        android:textSize="21sp"
        android:textColor="#353535"
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="总收益"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/income_label"
        app:layout_constraintBottom_toBottomOf="@id/income_label"
        app:layout_constraintLeft_toRightOf="@id/income_label"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/income_label"
        android:layout_marginLeft="110dp" />
</androidx.constraintlayout.widget.ConstraintLayout>